server {
	listen 80 default_server;
	server_name _;

	location / {
        	return 301 http://193.40.156.67:{{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'].split(".")[3] }}80/grafana$request_uri;
    	}

	location /prometheus {
		proxy_pass http://{{ inventory_hostname }}:9090/prometheus;
		proxy_set_header Host $host;
        	proxy_set_header X-Real-IP $remote_addr;
        	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        	proxy_set_header X-Forwarded-Proto $scheme;
	}
		
	location /grafana {
    		proxy_pass http://{{ inventory_hostname }}:{{ grafana_port }}/grafana;
		proxy_set_header Host $host;
        	proxy_set_header X-Real-IP $remote_addr;
        	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        	proxy_set_header X-Forwarded-Proto $scheme;
  	}
}


