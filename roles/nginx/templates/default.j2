server {
	listen 80 default_server;
	server_name _;

	location / {
		proxy_pass http://pavroto-1:{{ agama_port }};
                proxy_set_header Host $http_host;
	}

	{%- if "pavroto-2" in groups['monitor_servers'] %}	
	
	location /prometheus {
		proxy_pass http://pavroto-2:9090/prometheus;	
	}	
		
	location /grafana {
    		proxy_pass http://pavroto-2:{{ grafana_port }}/grafana;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
  	}
	{%- endif %}
}


server {
	listen 8080;

	location = /stub_status {
    		stub_status;
	}	

}
